{
    "name": "elph-studio/laravel-database-tools",
    "type": "library",
    "description": "Extended Laravel Database configuration",
    "license": "MIT",
    "keywords": ["database", "mysql", "seeder", "faker", "migration"],
    "authors": [{
        "name": "Elephant Studio",
        "email": "developers@elph.studio",
        "homepage": "https://www.elph.studio"
    }],
    "require": {
        "php": "^8.5",
        "elph-studio/laravel-helpers": "^0.1.1",
        "fakerphp/faker": "^1.24"
    },
    "require-dev": {
        "elph-studio/laravel-testing-tools": "^0.3",
        "laravel/framework": "12.*"
    },
    "autoload": {
        "psr-4": {
            "Elph\\LaravelDatabase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php vendor/elph-studio/laravel-helpers/src/Helper/Plain/VendorFixer.php"
        ],
        "post-update-cmd": [
            "@php vendor/elph-studio/laravel-helpers/src/Helper/Plain/VendorFixer.php"
        ]
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MigrationProvider"
            ]
        }
    }
}
